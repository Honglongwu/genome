#!/usr/bin/env genome-perl

BEGIN { 
    $ENV{UR_DBI_NO_COMMIT} = 1;
    $ENV{UR_USE_DUMMY_AUTOGENERATED_IDS} = 1;
}

use strict;
use warnings;

use above "Genome";
use Test::More;

use_ok("Genome::Model::GenotypeMicroarray::Filter::ByChromosome");

my $filter = Genome::Model::GenotypeMicroarray::Filter::ByChromosome->create(exclude => "X,Y,MT");
my $variant1 = {chrom => "1"};
my $variant2 = {chrom => "Y"};
ok($filter->filter($variant1), "Variant on chrom1 is not filtered");
ok(!$filter->filter($variant2), "Variant on chrom Y is filtered");

done_testing;
