#!/usr/bin/env genome-perl

use strict;
use warnings;

BEGIN {
    $ENV{UR_DBI_NO_COMMIT} = 1;
    $ENV{UR_USE_DUMMY_AUTOGENERATED_IDS} = 1;
    $ENV{UR_COMMAND_DUMP_STATUS_MESSAGES} = 1;
};

use above 'Genome';

require File::Compare;
use Test::More;

use_ok('Genome::Model::GenotypeMicroarray::Build::CreateFilteredGenotypeTsvFile') or die;
use_ok('Genome::Model::GenotypeMicroarray::Test') or die;

my $build = Genome::Model::GenotypeMicroarray::Test->build();
my $example_build = Genome::Model::GenotypeMicroarray::Test->example_build();
symlink($example_build->original_genotype_file_path, $build->original_genotype_file_path);
ok(-s $build->original_genotype_file_path, 'linked original genotype file') or die;

my $cmd = Genome::Model::GenotypeMicroarray::Build::CreateFilteredGenotypeTsvFile->create(
    build => $build,
);
ok($cmd, 'create filtered genotypes file command');
ok($cmd->execute, 'execute create filtered genotype file command');

is(File::Compare::compare($build->genotype_file_path, $example_build->genotype_file_path), 0, 'filtered genotype file matches');
ok(-l $build->gold2geno_file_path, 'linked gold 2 geno file path');

#print "gvimdiff ".$build->genotype_file_path.' '.$example_build->genotype_file_path."\n"; <STDIN>;
done_testing();
